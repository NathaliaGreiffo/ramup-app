generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String       @id @default(uuid()) @db.Uuid
  email      String       @unique
  name       String
  password   String
  birthday   DateTime     @db.Date
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  eventUsers EventUsers[]
  events     Event[]

  @@map("users")
}

model Event {
  id          String       @id @default(uuid()) @db.Uuid
  name        String
  description String
  city        String
  state       String
  country     String
  zipCode     String
  latitude    String
  longitude   String
  onlyAdults  Boolean
  showUsers   Boolean
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  userId      String       @db.Uuid
  eventUsers  EventUsers[]
  user        User         @relation(fields: [userId], references: [id])

  @@map("events")
}

model EventUsers {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @db.Uuid
  eventId   String   @db.Uuid
  createdAt DateTime @default(now())
  event     Event    @relation(fields: [eventId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@map("eventUsers")
}
